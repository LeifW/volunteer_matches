<h1>Listing people</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Male</th>
    <th>Contact</th>
    <th>Address</th>
    <th>Contact permission</th>
    <th>Availabilities</th>
    <th>Weekly hours</th>
    <th>Comments</th>
    <th>Type</th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%=h person.id %></td>
    <td><%=h person.name %></td>
    <td><%=h person.male %></td>
    <td><%=h person.contacts %></td>
    <td><%=h person.address %></td>
    <td><%=h person.contact_permission %></td>
    <td><%=h person.availabilities %></td>
    <td><%=h person.weekly_hours %></td>
    <td><%=h person.comments %></td>
    <td><%=h person.type %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

